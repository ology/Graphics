#!/usr/bin/env perl
use strict;
use warnings;

use lib map { "$ENV{HOME}/sandbox/$_/lib" } qw(Data-Turtle);
use Data::Turtle ();
use SVG qw(title);

use constant SIDE => 90;

my ($width, $height) = (500, 500);
my $stroke = 'black';
my $fill = 'white';

my $svg = SVG->new(
    width  => $width,
    height => $height,
);
$svg->title()->cdata('Data::Turtle');
my $style = $svg->group(
    id    => 'style-group',
    style => {
        stroke => $stroke,
        fill   => $fill,
    },
);
$style->rectangle(
    id     => 'rectangle-frame',
    x      => 0,
    y      => 0,
    width  => $width,
    height => $height,
);

my $turtle = Data::Turtle->new(
    width   => $width,
    height  => $height,
    x       => SIDE,
    y       => SIDE,
    heading => 0,
);

for my $col (1 .. 2) {
    for my $row (1 .. 2) {
        $turtle->pen_down;
        for my $i (1 .. 6) {
            my @line = $turtle->forward(SIDE);
            if (@line) {
                $style->line(
                    id => "line-$col.$row.$i",
                    x1 => $line[0],
                    y1 => $line[1],
                    x2 => $line[2],
                    y2 => $line[3],
                );
            }
            $turtle->right(60);
        }
        $turtle->pen_up;
        $turtle->forward(SIDE * 3);
    }
    $turtle->backward(SIDE * 6);
    $turtle->right(90);
    $turtle->forward(SIDE * sqrt(3));
    $turtle->left(90);
}

print $svg->xmlify;
